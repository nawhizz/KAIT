	if key = #13 then begin
    	Case self.searchCondition of
        1: edt_Inq_Str.SetFocus;
        2: edt_birth_dt.SetFocus;
        3: edt_phone_no.SetFocus;
        4: cmb_model_cb.SetFocus;
      end;
  end;
end;

